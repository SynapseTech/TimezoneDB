{
  "name": "TimezoneDB",
  "version": "0.0.1",
  "description": "TimezoneDB is an easy, cross-platform method of keeping track of others' timezones.",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": [
    "https://twitter.com/",
    "https://github.com/",
    "https://discord.com/",
    "https://reddit.com/",
    "https://www.twitch.tv/"
  ],
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://github.com/*",
        "https://discord.com/*",
        "https://reddit.com/*",
        "https://*.twitch.tv/*"
      ],
      "js": ["js/content-script.js"]
    }
  ]
}
