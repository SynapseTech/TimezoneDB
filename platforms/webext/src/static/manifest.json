{
  "name": "TimezoneDB",
  "version": "0.0.1",
  "description": "TimezoneDB is an easy, cross-platform method of keeping track of others' timezones.",
  "manifest_version": 2,
  "permissions": ["storage", "currentTab"],
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/content-script.js"]
    }
  ]
}
