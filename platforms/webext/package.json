{
	"name": "tzdb-webext",
	"displayName": "TimezoneDB",
	"version": "0.1.0",
	"description": "TimezoneDB is an easy, cross-platform method of keeping track of others' timezones.",
	"private": true,
	"scripts": {
		"dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
		"dev:prepare": "esno scripts/prepare.ts",
		"dev:web": "vite",
		"dev:js": "npm run build:js -- --mode development",
		"build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
		"build:prepare": "esno scripts/prepare.ts",
		"build:web": "vite build",
		"build:js": "vite build --config vite.config.content.ts",
		"pack": "cross-env NODE_ENV=production run-p pack:*",
		"pack:zip": "rimraf extension.zip && cd extension/ && bestzip ../extension.zip *",
		"pack:crx": "crx pack extension -o ./extension.crx",
		"pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
		"start:chromium": "web-ext run --source-dir ./extension --target=chromium",
		"start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
		"clear": "rimraf extension/dist extension/manifest.json extension.*",
		"lint": "eslint '{src,scripts}/**/*.{json,ts,js,vue}'",
		"test": "vitest test",
		"prepare": "cd ../.. && husky install platforms/webext/.husky"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^0.27.0",
		"@iconify/json": "^2.1.122",
		"@types/dateformat": "^5.0.0",
		"@types/fs-extra": "^9.0.13",
		"@types/node": "^18.11.0",
		"@types/webextension-polyfill": "^0.9.1",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@vitejs/plugin-vue": "^2.3.4",
		"@vue/compiler-sfc": "^3.2.38",
		"@vue/test-utils": "^2.1.0",
		"@vueuse/core": "^9.3.0",
		"bestzip": "^2.2.1",
		"chokidar": "^3.5.3",
		"cross-env": "^7.0.3",
		"crx": "^5.0.1",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"esno": "^0.16.3",
		"fs-extra": "^10.1.0",
		"husky": "^8.0.1",
		"jsdom": "^20.0.1",
		"kolorist": "^1.6.0",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "2.7.1",
		"rimraf": "^3.0.2",
		"sass": "^1.55.0",
		"typescript": "^4.8.4",
		"unplugin-auto-import": "^0.11.2",
		"unplugin-icons": "^0.14.11",
		"unplugin-vue-components": "^0.22.8",
		"vite": "^2.9.14",
		"vite-plugin-windicss": "^1.8.8",
		"vitest": "^0.24.3",
		"vue": "^3.2.41",
		"vue-demi": "^0.13.11",
		"web-ext": "^7.3.1",
		"webext-bridge": "^5.0.5",
		"webextension-polyfill": "^0.10.0"
	},
	"dependencies": {
		"dateformat": "^5.0.3"
	},
	"resolutions": {
		"**/node-forge": "^1.3.0",
		"**/got": "^11.8.5"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	}
}
